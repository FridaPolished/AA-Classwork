<h1>Let's add a new band</h1>

<%if flash[:errors]%>
<ul>
    <%flash[:errors].each do |error|%>
    <li><%=error%></li>
    <%end%>
</ul>
<%end%>

<br>

<form action="<%=bands_url%>" method="post">
    <%= auth_token %>
    <label for="name">Band name: </label>
    <input type="text" name="band[name]" id="band_name">
    
    <br>
    <button>Add band</button>
</form>